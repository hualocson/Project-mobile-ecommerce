<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="itemList">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="borderImageCart">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="LatoFont">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="body_text_style">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="cta_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:background">@drawable/background_cta_button</item>
    </style>
    <style name="cwarning_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:background">@drawable/background_cwarn_button</item>
    </style>
    <style name="csuccess_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:background">@drawable/background_csuccess_button</item>
    </style>

    <style name="cpri_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="csec_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:background">@drawable/background_confirm_normal_button</item>
    </style>

    <style name="h2_highlight_style">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="button_style_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:background">@drawable/background_button_normal</item>
    </style>

    <style name="button_style_primary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="button_style_outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="myEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textCursorDrawable">@drawable/background_cursor_edittext</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/on_secondary_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="myRoundEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_rounded_edittext</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textCursorDrawable">@drawable/background_cursor_edittext</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/on_secondary_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="myAdminEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_admin_edittext</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textCursorDrawable">@drawable/background_cursor_edittext</item>
        <item name="android:textColorHint">@color/on_secondary_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ProfileButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_color</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconTint">@color/text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/padding_medium</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/padding_small</item>
    </style>

    <style name="myTextViewHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SuccessToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/black</item>
        <item name="stFont">@font/lato</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/success</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stIconStart">@drawable/ic_logo</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="ErrorToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stFont">@font/lato</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/error</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stIconStart">@drawable/ic_logo</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>
    <style name="InfoToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stFont">@font/lato</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/info</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stIconStart">@drawable/ic_logo</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="myDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExposedDropdownMenu</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="endIconTint">@color/text_color</item>
    </style>

    <style name="ThemeOverlay.App.ExposedDropdownMenu" parent="">
        <item name="colorPrimary">@color/text_color</item>
        <item name="colorOnSurface">@color/on_secondary_color</item>
        <item name="colorError">@color/error</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="autoCompleteTextViewStyle">@style/myPopupMenu</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>
    <style name="myPopupMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Subtitle1</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="layout_anchor">@dimen/padding_medium</item>
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/secondary_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_elevation</item>
    </style>

    <style name="myBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>
</resources>