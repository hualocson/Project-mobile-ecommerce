<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SettingNotificationFragment"
    >

    <include
        android:id="@+id/navigate_setting_notification"
        layout="@layout/navigate_btn" />

    <TextView
        android:id="@+id/textViewSettingNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Notification"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/navigate_setting_notification"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSettingNotification">

        <Switch
            android:id="@+id/GeneralNotification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="General Notification"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"></Switch>

        <Switch
            android:id="@+id/Sound"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sound"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GeneralNotification"
            >
        </Switch>

        <Switch
            android:id="@+id/Vibrate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Vibrate"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sound"></Switch>
        <Switch
            android:id="@+id/SpecialOffers"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Special Offers"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Vibrate"></Switch>

        <Switch
            android:id="@+id/PromoDiscount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Promo &amp; Discount"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SpecialOffers"></Switch>

        <Switch
            android:id="@+id/Payments"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Payments"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PromoDiscount"></Switch>

        <Switch
            android:id="@+id/Cashback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cashback"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Payments"></Switch>

        <Switch
            android:id="@+id/AddUpdates"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add Updates"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cashback"></Switch>

        <Switch
            android:id="@+id/NewServiceAvailable"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="New Service Available"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AddUpdates"></Switch>

        <Switch
            android:id="@+id/NewTipsAvailable"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="New Tips Available"
            android:textSize="23dp"
            android:layout_marginVertical="10dp"
            android:track="@drawable/switch_track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NewServiceAvailable"></Switch>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>