<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_default"
    android:id="@+id/layout_category_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/category_ic"
        android:layout_width="@dimen/category_ic_height"
        android:layout_height="@dimen/category_ic_width"
        android:src="@drawable/ic_apple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:background="@drawable/background_category_icon"
        android:contentDescription="Category Icon"
        android:layout_marginTop="5dp"
        android:padding="@dimen/padding_default"/>

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laptop"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/category_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_default_half"
        />

</androidx.constraintlayout.widget.ConstraintLayout>